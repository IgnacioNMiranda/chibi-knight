{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "es6"
    ],
  },
  "include": ["src/**/*"]
}
